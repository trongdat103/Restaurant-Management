@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor acessor
@model IEnumerable<qlNhaHang.Areas.ViewModels.TangViewModel>
@{
    var idHoaDon = ViewBag.ID_HoaDon;
    var idHoaDon1 = @acessor.HttpContext.Session.GetInt32("ID_HoaDon") ?? 0;
}
@foreach (var item in Model)
{
    <div style="background: #000; color: #fff;border-radius: 11px; margin: 0 10px">
        <a class="nav-link" asp-action="DanhSachBanHDTang" asp-route-IdTang="@item.IdTang" asp-route-ID_HoaDon="@idHoaDon1">@item.TenTang</a>
    </div>
}

