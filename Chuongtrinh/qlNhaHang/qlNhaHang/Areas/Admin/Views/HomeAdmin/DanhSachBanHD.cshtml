@model List<qlNhaHang.Data.Ban>
@{
    ViewData["Title"] = "DanhSachBanHD";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    var idHoaDon = ViewBag.ID_HoaDon;
}
<div class="row flex-grow">
    <div class="col-12 grid-margin stretch-card">
        <div class="card card-rounded">
            <div class="card-body">
                <div style="display: flex;justify-content: center;">
                    @await Component.InvokeAsync("MenuTangHD")
                </div>
                <div class="d-sm-flex justify-content-between align-items-start">                  
                    <div class="d-flex flex-wrap justify-content-center">                   
                        @* <a asp-action="ThemMonAn" class="btn btn-primary btn-lg text-white mb-0 me-0">
                        <i class="mdi mdi-account-plus"></i> Add new food
                        </a> *@
                        @foreach (var item in Model)
                        {
                            if (item.Trangthai == null)
                            {
                                <div class="p-2" style="flex: 1 1 calc(33.333% - 1rem); max-width: calc(33.333% - 1rem);">
                                    <div class="card">
                                        <div class="card-body d-flex flex-column align-items-center">
                                            @if (idHoaDon == 0)
                                            {
                                                <a class="btn btn-outline-secondary btn-lg">@item.TenBan</a>
                                                <div class="mt-2">
                                                    <a>Bàn đang trống</a>
                                                </div>
                                            }
                                            else
                                            {
                                                <a asp-action="Addban" asp-controller="HomeAdmin" asp-route-IdBan="@item.IdBan" asp-route-IdHoaDon="@idHoaDon" class="btn btn-outline-secondary btn-lg">@item.TenBan</a>
                                                <div class="mt-2">
                                                    <a>Bàn đang trống</a>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="p-2" style="flex: 1 1 calc(33.333% - 1rem); max-width: calc(33.333% - 1rem); border-radius:4px">
                                    <div class="card">
                                        <div class="card-body d-flex flex-column align-items-center" style="background: gainsboro;">
                                            <a class="btn btn-outline-secondary btn-lg">@item.TenBan</a>
                                            <div class="mt-2">
                                                <a>@item.Trangthai</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
